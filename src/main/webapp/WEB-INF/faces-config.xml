<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>

		<resource-bundle>
			<base-name>resources.bundles.messages</base-name>
			<var>msg</var>
		</resource-bundle>
	</application>

	<managed-bean>
		<managed-bean-name>mbFunc</managed-bean-name>
		<managed-bean-class>br.fpu.tcc.hotelaria.controller.FuncionarioController</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>funcionarioBo</property-name>
			<value>#{funcionarioBo}</value>
		</managed-property>
		<managed-property>
			<property-name>bundle</property-name>
			<value>#{msg}</value>
		</managed-property>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>mbCli</managed-bean-name>
		<managed-bean-class>br.fpu.tcc.hotelaria.controller.ClienteController</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>clienteBo</property-name>
			<value>#{clienteBo}</value>
		</managed-property>
		<managed-property>
			<property-name>bundle</property-name>
			<value>#{msg}</value>
		</managed-property>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>mbQuarto</managed-bean-name>
		<managed-bean-class>br.fpu.tcc.hotelaria.controller.QuartoController</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>quartoBo</property-name>
			<value>#{quartoBo}</value>
		</managed-property>
		<managed-property>
			<property-name>bundle</property-name>
			<value>#{msg}</value>
		</managed-property>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>mbReserva</managed-bean-name>
		<managed-bean-class>br.fpu.tcc.hotelaria.controller.ReservaController</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>reservaBo</property-name>
			<value>#{reservaBo}</value>
		</managed-property>
		<managed-property>
			<property-name>clienteBo</property-name>
			<value>#{clienteBo}</value>
		</managed-property>
		<managed-property>
			<property-name>quartoBo</property-name>
			<value>#{quartoBo}</value>
		</managed-property>
		<managed-property>
			<property-name>bundle</property-name>
			<value>#{msg}</value>
		</managed-property>
	</managed-bean>

	<converter id="clienteConverter">
		<converter-id>clienteConverter</converter-id>
		<converter-class>br.fpu.tcc.hotelaria.controller.converter.ClienteConverter</converter-class>
		<converter-for-class>br.fpu.tcc.hotelaria.pojo.Cliente</converter-for-class>
	</converter>

</faces-config>